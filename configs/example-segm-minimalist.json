{
    "name": "example-segm-minimalist",
    "datasets": {
        "pascalvoc": {
            "type": "thelper.data.PASCALVOC",
            "params": {
                "root": "data/pascalvoc",
                "task": "segm",
                "subset": "trainval",
                "download": true,
                "preload": false
            }
        }
    },
    "loaders": {
        "batch_size": 1,
        "base_transforms": [
            {
                "operation": "thelper.transforms.NormalizeMinMax",
                "params": {
                    "min": [127, 127, 127],
                    "max": [255, 255, 255]
                }
            },
            {
                "operation": "torchvision.transforms.ToTensor"
            }
        ],
        "train_split": {
            "pascalvoc": 0.9
        },
        "valid_split": {
            "pascalvoc": 0.1
        }
    },
    "model": {
        "type" : "thelper.nn.fcn.FCN32s",
        "params": {}
    },
    "trainer": {
        "type": "thelper.train.ImageSegmTrainer",
        "epochs": 5,
        "monitor": "accuracy",
        "optimization": {
            "loss": {
                "type": "torch.nn.CrossEntropyLoss"
            },
            "optimizer": {
                "type": "torch.optim.Adam",
                "params": {
                    "lr": 0.001
                }
            }
        },
        "metrics": {
            "accuracy": {
                "type": "thelper.optim.CategoryAccuracy",
                "params": {
                    "top_k": 1
                }
            }
        }
    }
}
