{
    "name": "testbed15-viz",
    "datasets": {
        "testbed15_smart": {
            "type": "thelper.data.geo.ogc.TB15D104Dataset",
            "params": {
                "raster_path": "data/testbed15/roi_hrdem.tif",
                "vector_path": "data/testbed15/hydro_original.geojson",
                "px_size": 3,
                "lake_area_min": 100,
                "lake_area_max": 200000,
                "lake_river_max_dist": 300,
                "roi_buffer": 1000,
                "srs_target": "2959",
                "reproj_rasters": false,
                "display_debug": true,
                "parallel": 0
            }
        },
        "testbed15_tiled": {
            "type": "thelper.data.geo.ogc.TB15D104TileDataset",
            "params": {
                "raster_path": "data/testbed15/roi_hrdem.tif",
                "vector_path": "data/testbed15/hydro_original.geojson",
                "tile_size": [500, 500],
                "tile_overlap": 100,
                "px_size": 3,
                "lake_area_min": 100,
                "lake_area_max": 200000,
                "srs_target": "2959",
                "reproj_rasters": false,
                "display_debug": true,
                "parallel": 0
            }
        }
    },
    "loaders": {
        "workers": 0,
        "shuffle": false,
        "collate_fn": {
            "type": "thelper.data.loaders.default_collate",
            "params": {"force_tensor": false}
        },
        "train_split": {
            "testbed15_smart": 1.0
        },
        "valid_split": {
            "testbed15_tiled": 1.0
        }
    },
    "viz": {
        "kwargs": {
            "block": true,
            "ch_transpose": false
        }
    }
}
